<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_course_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_course"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/item_course_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뉴욕 현대 미술관"
        style="@style/tv_eb_16"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_course_iv"/>

    <TextView
        android:id="@+id/item_course_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유신"
        style="@style/tv_12"
        android:textColor="@color/deep_gray"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/item_course_title_tv"
        app:layout_constraintStart_toStartOf="@id/item_course_title_tv"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/item_course_name_tv"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>